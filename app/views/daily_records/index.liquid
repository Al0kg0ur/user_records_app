<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Daily Records</title>
    <link rel="stylesheet" type="text/css" href="/assets/user_list.css">
  </head>
  <body>
    <div id="list-record">
      <h1>Daily Records</h1>
      <table>
        <thead>
          <tr>
            <th>Date</th>
            <th>Male Count</th>
            <th>Female Count</th>
            <th>Male Avg Age</th>
            <th>Female Avg Age</th>
          </tr>
        </thead>
        <tbody>
          {% for record in daily_records %}
            <tr class="record">
              <td>{{ record['date'] }}</td>
              <td>{{ record['male_count'] }}</td>
              <td>{{ record['female_count'] }}</td>
              <td>{{ record['male_avg_age'] }}</td>
              <td>{{ record['female_avg_age'] }}</td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </body>
</html>
